                                <li>
                                    <!-- Modal toggle -->
                                    <button data-modal-target="modal-ajustes" data-modal-toggle="modal-ajustes" class="w-full block px-4 py-2 hover:bg-gray-100 flex justify-start" type="button">
                                        Ajustes
                                    </button>
