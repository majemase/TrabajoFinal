                    <li>
                        <a href="http://localhost:8080/TrabajoFinal/empleado/MenuPrincipal" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">Inicio</a>
                    </li>
                    <li>
                        <a href="http://localhost:8080/TrabajoFinal/empleado/Tareas" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">Tareas</a>
                    </li>
                    <li>
                        <a href="http://localhost:8080/TrabajoFinal/empleado/Materiales" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">Materiales</a>
                    </li>
                    <c:if test="${usuario.tipoUsuario eq TipoUsuario.ADMINISTRADOR}">
                        <li>
                            <a href="http://localhost:8080/TrabajoFinal/admin/Empleados" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">Empleados</a>
                        </li>
                        <li>
                            <a href="http://localhost:8080/TrabajoFinal/admin/Departamentos" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">Departamentos</a>
                        </li>
                    </c:if>
                    <li>
                        <button id="dropdownHoverButton" data-dropdown-toggle="dropdownHover" data-dropdown-trigger="hover" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0" type="button">Cuenta
